    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.liulu.accumulations.android7.NotificationActivity">

    <Button
        android:id="@+id/btn_send1"
        style="@style/button_style"
        android:background="@drawable/btn_notification"
        android:text="普通通知" />

    <Button
        android:id="@+id/btn_send2"
        style="@style/button_style"
        android:background="@drawable/btn_notification"
        android:text="扩展布局应用到通知" />
</LinearLayout>
